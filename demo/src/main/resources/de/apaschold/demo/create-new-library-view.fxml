<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="600.0" prefWidth="200.0" style="-fx-padding: 5.0" spacing="10.0" alignment="CENTER"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="de.apaschold.demo.gui.CreateNewLibraryViewController">
    <Label fx:id="folderPathLabel"/>

    <Button text="Change folder path" onAction="#changeFolderPath" prefHeight="20.0" prefWidth="100.0"/>

    <TextField fx:id="newLibraryName" promptText="Enter new library name" prefHeight="20.0"/>

    <Button text="Create new library" onAction="#createNewLibrary" prefHeight="20.0" prefWidth="100.0"/>

</VBox>

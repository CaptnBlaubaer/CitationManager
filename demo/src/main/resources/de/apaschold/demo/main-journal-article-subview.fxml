<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<TabPane prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.apaschold.demo.gui.mainview.JournalArticleSubViewController">
    <tabs>
        <Tab text="Article Info">
            <content>
                <VBox spacing="10.0" style="-fx-padding: 10px;">
                    <Label fx:id="articleType" style="-fx-font-size: 12;" />
                    <Label fx:id="title" style="-fx-font-size: 12;" />
                    <Label fx:id="authors" style="-fx-font-size: 12;" />
                    <Label fx:id="journal" style="-fx-font-size: 12;" />
                    <Label fx:id="journalShortForm" style="-fx-font-size: 12;" />
                    <Label fx:id="year" style="-fx-font-size: 12;" />
                    <Label fx:id="volume" style="-fx-font-size: 12;" />
                    <Label fx:id="issue" style="-fx-font-size: 12;" />
                    <Label fx:id="pages" style="-fx-font-size: 12;" />
                    <Label fx:id="doi" style="-fx-font-size: 12;" />
                </VBox>
            </content>
        </Tab>
        <Tab text="Edit">
            <content>
                <VBox spacing="10.0" style="-fx-padding: 10px;">
                    <Label text="Title" />
                    <TextField fx:id="titleChange" style="-fx-font-size: 12;" />
                    <Label text="Author(s)" />
                    <TextArea fx:id="authorsChange" style="-fx-font-size: 12;" />
                    <Label text="Journal" />
                    <TextField fx:id="journalChange" style="-fx-font-size: 12;" />
                    <Label text="Journal abbreviation" />
                    <TextField fx:id="journalShortFormChange" style="-fx-font-size: 12;" />
                    <Label text="Year" />
                    <TextField fx:id="yearChange" style="-fx-font-size: 12;" />
                    <Label text="Volume" />
                    <TextField fx:id="volumeChange" style="-fx-font-size: 12;" />
                    <Label text="Issue" />
                    <TextField fx:id="issueChange" style="-fx-font-size: 12;" />
                    <Label text="Pages" />
                    <TextField fx:id="pagesChange" style="-fx-font-size: 12;" />
                    <Label text="DOI" />
                    <TextField fx:id="doiChange" style="-fx-font-size: 12;" />
                    <Button onAction="#saveChanges" text="Save Changes" />
                </VBox>
            </content>
        </Tab>
        <Tab text="Attached Files">
            <content>
                <VBox spacing="10.0" style="-fx-padding: 10px;">
                    <ComboBox fx:id="attachedFiles" onAction="#selectAttachedFile"/>
                    <BorderPane fx:id="pdfViewer"/>
                </VBox>
            </content>
        </Tab>
    </tabs>
</TabPane>
